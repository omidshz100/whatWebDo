{
  "manifest_version": 3,
  "name": "Site Explainer (OpenRouter)",
  "version": "1.1.0",
  "description": "با یک کلیک توضیح می‌دهد این وب‌سایت چه‌کار می‌کند (OpenRouter).",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "host_permissions": ["https://openrouter.ai/*"],
  "action": { "default_title": "Explain this site", "default_popup": "popup.html" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }]
}
